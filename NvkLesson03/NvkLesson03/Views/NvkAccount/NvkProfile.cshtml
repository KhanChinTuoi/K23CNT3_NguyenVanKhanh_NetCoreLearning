@{
    ViewData["Title"] = "Profile";
    var account = ViewBag.account;
}

<h2>Ur Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@account.NvkAvatar" alt="" style="width:100%"/>
    </div>
    <div class="col-md-8">
        <h2>Fullname: @account.NvkName</h2>
        <h3>Email: @account.NvkEmail</h3>
        <h3>Phone: @account.NvkPhone</h3>
        <h3>Address: @account.NvkAddress</h3>
        <h3>Bio: @account.NvkBio</h3>
        <h3>Gender:
            @if (account.NvkGender == 1)
            {
                <span>Male</span>
            }
            else
            {
                <span>Female</span>
            }
        </h3>
        <h3>Birthday @account.NvkBirthday</h3>
        <p>
            <a asp-controller="NvkAccount" asp-action="NvkIndex" class="btn btn-sm btn-danger">Back to list</a>
        </p>
    </div>
</div>

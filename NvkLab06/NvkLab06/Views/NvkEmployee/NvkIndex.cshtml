@model IEnumerable<NvkLab06.Models.NvkEmployee>
@{
    ViewData["Title"] = "Danh sach nhan vien";
}

<!-- Bootstrap CSS (CDN) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-center mb-4">Danh sách nhân viên</h1>
        <a href="NvkEmployee/NvkCreate" class="btn btn-primary">Them moi</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Lương</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var NvkEmp in Model)
            {
                <tr>
                    <td>@NvkEmp.NvkName</td>
                    <td>@NvkEmp.NvkBirthday.ToString("dd/MM/yyyy")</td>
                    <td>@NvkEmp.NvkEmail</td>
                    <td>@NvkEmp.NvkPhone</td>
                    <td>@NvkEmp.NvkSalary.ToString("N0") VND</td>
                    <td>
                        @if (NvkEmp.NvkStatus)
                        {
                            <span class="badge bg-success">Đang làm</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Đã nghỉ</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="NvkEdit" asp-route-id="@NvkEmp.NvkId">Sửa</a>
                        <a class="btn btn-sm btn-danger" asp-action="NvkDelete" asp-route-id="@NvkEmp.NvkId">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
